<h1>List All</h1
  <p><%= link_to "Create a Todo", new_todo_path %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |t|%>
  <tr>
    <td><%= t.name %></td>
    <td><%= t.description %></td>
    <td><%= link_to "Edit", edit_todo_path(t) %></td>
    <td><%= link_to "View", todo_path(t) %></td>
  </tr>

  <% end %>

</table>
